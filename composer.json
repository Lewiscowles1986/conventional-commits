{
    "name": "ramsey/conventional-commits",
    "type": "library",
    "description": "A PHP library for creating and validating commit messages according to the Conventional Commits specification. Includes a CaptainHook plugin!",
    "keywords": [
        "captainhook",
        "commit",
        "commit-msg",
        "conventional",
        "conventional-commits",
        "git",
        "hook",
        "plugin"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Ramsey",
            "email": "ben@benramsey.com",
            "homepage": "https://benramsey.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "captainhook/captainhook": "^5.3.3",
        "symfony/console": "^5.1",
        "symfony/polyfill-php80": "^1.17"
    },
    "require-dev": {
        "ramsey/devtools": "^1.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "ramsey/devtools": {
            "command-prefix": "dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Ramsey\\CaptainHook\\": "src/CaptainHook/",
            "Ramsey\\ConventionalCommits\\": "src/ConventionalCommits/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ramsey\\Test\\": "tests/"
        },
        "files": [
            "vendor/hamcrest/hamcrest-php/hamcrest/Hamcrest.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/conventional-commits"
    ]
}
